{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Top-level pages (home, about, pricing, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 80
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "locale": {
      "type": "enumeration",
      "enum": ["fr", "en-GB", "en-US"],
      "required": true,
      "default": "fr"
    },
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "ogImageAlt": {
      "type": "string",
      "maxLength": 125
    },
    "sections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::section.section",
      "mappedBy": "page"
    }
  }
}

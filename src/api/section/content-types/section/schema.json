{
  "kind": "collectionType",
  "collectionName": "sections",
  "info": {
    "singularName": "section",
    "pluralName": "sections",
    "displayName": "Section",
    "description": "Reusable content blocks within pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "hero",
        "features",
        "cta",
        "testimonials",
        "faq",
        "stats",
        "content",
        "pricing",
        "logos",
        "process",
        "comparison"
      ],
      "required": true
    },
    "eyebrow": {
      "type": "string",
      "maxLength": 30
    },
    "heading": {
      "type": "string",
      "maxLength": 80
    },
    "subheading": {
      "type": "string",
      "maxLength": 120
    },
    "body": {
      "type": "richtext"
    },
    "ctaText": {
      "type": "string",
      "maxLength": 25
    },
    "ctaLink": {
      "type": "string"
    },
    "ctaStyle": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "ghost", "destructive"],
      "default": "primary"
    },
    "ctaText2": {
      "type": "string",
      "maxLength": 25
    },
    "ctaLink2": {
      "type": "string"
    },
    "backgroundStyle": {
      "type": "enumeration",
      "enum": ["light", "dark", "brand", "gradient"],
      "default": "light"
    },
    "anchor": {
      "type": "uid"
    },
    "ariaLabel": {
      "type": "string",
      "maxLength": 100
    },
    "helpText": {
      "type": "text",
      "maxLength": 200
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "hideMobile": {
      "type": "boolean",
      "default": false
    },
    "mobileOrder": {
      "type": "integer"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "shared.feature"
    },
    "pricingTiers": {
      "type": "component",
      "repeatable": true,
      "component": "shared.pricing-tier"
    },
    "emptyState": {
      "type": "component",
      "repeatable": false,
      "component": "shared.empty-state"
    },
    "page": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::page.page",
      "inversedBy": "sections"
    }
  }
}
